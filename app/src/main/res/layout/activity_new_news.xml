<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/news_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_add_a_photo_black_24dp"
        android:layout_marginVertical="2dp"
        />
    <EditText
        android:id="@+id/new_news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Aqui el titulo de tu publicacion"
        android:textColor="@color/cyan2"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_below="@+id/news_image"

        />
    <EditText
        android:id="@+id/new_news_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" aqui tu contenido
        This text is Tittle of the new, This text is Tittle of the new,This text is Tittle of the new,This text is Tittle of the new,This text is Tittle of the newv,This text is Tittle of the new,This text is Tittle of the newThis text is Tittle of the newv..."
        android:textColor="@color/black"
        android:textStyle="italic"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_below="@+id/news_title"

        />
    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/news_content"
        android:orientation="horizontal"/>
    <Button
        android:id="@+id/btnPublish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Publicar"
        />


</LinearLayout>