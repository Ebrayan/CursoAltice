<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".ActivitySomeEmergency">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_outer"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            card_view:cardBackgroundColor="@android:color/transparent"
            card_view:cardCornerRadius="0dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="10dp" >
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_inner1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                card_view:cardBackgroundColor="@color/cyan3"
                card_view:cardCornerRadius="90dp"
                card_view:cardElevation="10dp"
                >

                <LinearLayout
                    android:id="@+id/btnEmergecySick"
                    android:layout_width="match_parent"
                    android:background="@drawable/enfecmedad_vector"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enfermedad"
                    android:textColor="@color/cyan800"
                    android:textStyle="bold"
                    android:textSize="25dp"

                    android:layout_gravity="bottom|center"
                    />
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_outer2"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            card_view:cardBackgroundColor="@android:color/transparent"
            card_view:cardCornerRadius="0dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="10dp" >
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                card_view:cardBackgroundColor="@color/cyan3"
                card_view:cardCornerRadius="90dp"
                android:id="@+id/card_view_inner2"
                card_view:cardElevation="10dp" >
                <LinearLayout
                    android:id="@+id/violencia"
                    android:layout_width="match_parent"
                    android:background="@drawable/fight"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Siendo VIctima"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    />
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_outer3"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            card_view:cardBackgroundColor="@android:color/transparent"
            card_view:cardCornerRadius="0dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="10dp" >
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_inner3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                card_view:cardBackgroundColor="@color/cyan3"
                card_view:cardCornerRadius="90dp"
                card_view:cardElevation="10dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/help_vector"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Necesito Ayuda"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    />
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>
</LinearLayout>