<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".FragmentSelectCOntact">
<ViewFlipper
    android:id="@+id/myViewFlipper"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/myrecyclercontact"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cyan800"
            android:text="Parentesco"


            />
        <EditText
            android:id="@+id/txtParentesco"
            android:layout_width="match_parent"
            android:hint="@string/parentesco"
            android:layout_margin="5dp"
            android:layout_height="45dp"
            android:textColor="@color/cyan800"
            android:background="@drawable/round_edittext"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ver_mi_ubicacion"
            android:textColor="@color/cyan800"
            />
        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ToggleButton" />

        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:text="Contacto tinen cuenta?"
            android:textColor="@color/cyan800"
            />

        <ToggleButton
            android:id="@+id/toggleButtoniSUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ToggleButton" />
        <EditText
            android:id="@+id/txtID"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:textColor="@color/cyan800"
            android:background="@drawable/round_edittext"
            android:hint="Introduce Email Contacto"
            />
        <Button
            android:id="@+id/btnSaveContactandUpdate"
            android:text="Guardar"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/round_buttons"
            />
    </LinearLayout>
</ViewFlipper>
</LinearLayout>